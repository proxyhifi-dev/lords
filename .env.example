# FYERS credentials
FYERS_APP_ID=YOUR_APP_ID
FYERS_SECRET=YOUR_APP_SECRET
FYERS_PIN=1234
FYERS_REDIRECT_URI=http://127.0.0.1:8080
FYERS_AUTH_URL=https://api-t1.fyers.in/api/v3

# FYERS REST URLs (trade vs market data)
FYERS_BASE_URL=https://api-t1.fyers.in/api/v3
FYERS_DATA_URL=https://api.fyers.in/data-rest/v3

# Optional websocket URLs
FYERS_DATA_WS_URL=wss://api.fyers.in/socket/v2/data/
FYERS_ORDER_WS_URL=wss://api.fyers.in/socket/v2/order/
FYERS_POSITION_WS_URL=wss://api.fyers.in/socket/v2/position/
FYERS_TRADE_WS_URL=wss://api.fyers.in/socket/v2/trade/
FYERS_WS_SSL_VERIFY=true
FYERS_WS_STOP_ON_SSL_ERROR=false
FYERS_WS_MAX_RETRY_DELAY=60

# Bot behavior
TRADING_MODE=PAPER
INITIAL_CAPITAL=100000
STOP_LOSS_PCT=0.15
TARGET_PCT=0.30

# Resilience controls
FYERS_MAX_RETRIES=3
FYERS_RETRY_BACKOFF_SECONDS=0.5
FYERS_MAX_BACKOFF_SECONDS=8
API_FAILURE_THRESHOLD=5
API_FAILURE_WINDOW_SECONDS=60
API_PAUSE_SECONDS=120

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lords_bot.log
